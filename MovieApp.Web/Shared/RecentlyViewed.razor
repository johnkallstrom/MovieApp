<div id="recently-viewed" class="mb-3">
    <h3>Recently Viewed</h3>
    <div class="row">
        <div class="col-sm-6">
            @if (StoredMovies is not null)
            {
                <ul class="list-group">
                    @foreach (var item in StoredMovies)
                    {
                        <li class="list-group-item">@item.Title</li>
                    }
                </ul>
                <button class="btn btn-primary mt-3" @onclick="ClearLocalStorage">Clear History</button>
            }
            else
            {
                <p>You have no recently viewed items</p>
            }
        </div>
    </div>
</div>