@if (!string.IsNullOrWhiteSpace(GetImageUrl()))
{
    <a href="@GetMediaUrl()">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <p>@Media.DisplayNameOrTitle()</p>

            <div class="image-parent">
                <img src="@GetImageUrl()" class="img-fluid">
            </div>
        </li>
    </a>
}