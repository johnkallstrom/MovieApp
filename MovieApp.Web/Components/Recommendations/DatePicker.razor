<div id="recommendations-date" class="mt-3">
    <p class="mb-1">From</p>
    <input type="date"
           max="@(DateTime.Today.ToString("yyyy-MM-dd"))"
           @onchange="@(async (e) => await HandleDateSelection(e, "from"))" class="form-select-sm">
    <p class="mt-2 mb-1">To</p>
    <input type="date"
           @onchange="@(async (e) => await HandleDateSelection(e, "to"))" class="form-select-sm">
</div>