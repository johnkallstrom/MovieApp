<div id="recommendations-sorting">
    <p class="mb-1">Sort by</p>
    <select class="form-select form-select-sm" @onchange="@(async (e) => await OnSortSelection.InvokeAsync(e.Value.ToString()))">
        @if (ShowMovieOptions)
        {
            @foreach (var option in MovieSortingOptions)
            {
                @if (option.Value == MovieApp.Web.Enums.SortingMovieType.PopularityDescending)
                {
                    <option value="@option.Value" selected>@option.Text</option>
                }
                else
                {
                    <option value="@option.Value">@option.Text</option>
                }
            }
        }
        else if (ShowTVOptions)
        {
            @foreach (var option in TVSortingOptions)
            {
                @if (option.Value == MovieApp.Web.Enums.SortingTVType.PopularityDescending)
                {
                    <option value="@option.Value" selected>@option.Text</option>
                }
                else
                {
                    <option value="@option.Value">@option.Text</option>
                }
            }
        }
    </select>
</div>