<div id="recommendations-rating" class="mt-3">
    <p class="mb-1">Rating</p>
    <div class="range">
        <input type="range"
               class="form-range"
               min="1"
               max="10"
               value="1"
               @oninput="@(async (e) => await OnRatingChanged.InvokeAsync(e.Value.ToString()))" />
    </div>
</div>