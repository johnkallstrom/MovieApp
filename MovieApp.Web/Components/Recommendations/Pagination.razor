<div id="recommendations-pagination">
    <p>Page @Page of @TotalPages</p>
    <nav>
        <ul class="pagination">
            @if (Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" @onclick="@(async () => await OnPageChanged.InvokeAsync((Page - 1)))">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            }

            @if (Page < TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" @onclick="@(async () => await OnPageChanged.InvokeAsync((Page + 1)))">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>