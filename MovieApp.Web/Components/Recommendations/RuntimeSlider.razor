<div id="recommendations-runtime" class="mt-3">
    <p class="mb-1">Runtime</p>
    <div class="range">
        <input type="range" 
               class="form-range" 
               min="0" 
               max="360" 
               value="0"
               @oninput="@(async (e) => await OnRuntimeChanged.InvokeAsync(e.Value.ToString()))"/>
    </div>
</div>