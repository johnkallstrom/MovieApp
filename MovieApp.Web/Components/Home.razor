@page "/"

<div id="home">
    <div class="row">
        <div class="col-md-8">
            <TrendingMediaCarousel />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="media-wrapper">
                <h3 class="mb-3"><a href="@($"/movies/upcoming")">Upcoming Movies</a></h3>
                <div class="row flex-row flex-nowrap overflow-auto">
                    @foreach (var movie in UpcomingMovies)
                    {
                        <DisplayMovie Movie="@movie" />
                    }
                </div>
            </div>
            <div class="media-wrapper">
                <h3 class="mb-3"><a href="@($"/tv-shows/popular")">Popular TV Shows</a></h3>
                <div class="row flex-row flex-nowrap overflow-auto">
                    @foreach (var tvShow in PopularTVShows)
                    {
                        <DisplayTV TVShow="tvShow" />
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div id="recently-viewed">
                <h3 class="mb-3">Recently Viewed</h3>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">Movie Title</a>
                    <a href="#" class="list-group-item list-group-item-action">Movie Title</a>
                    <a href="#" class="list-group-item list-group-item-action">TV Show Title</a>
                    <a href="#" class="list-group-item list-group-item-action">TV Show Title</a>
                    <a href="#" class="list-group-item list-group-item-action">Actor Name</a>
                    <a href="#" class="list-group-item list-group-item-action">Actor Name</a>
                </div>
            </div>
        </div>
    </div>
</div>