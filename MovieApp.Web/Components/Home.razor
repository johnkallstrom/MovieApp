@page "/"

<div id="home">
    <h1>Home</h1>
    <hr />
    <div class="row">
        <div class="col">
            @if (!string.IsNullOrEmpty(SearchState.SearchQuery))
            {
                <MediaTable Results="@Results"
                            SearchQuery="@SearchState.SearchQuery"
                            CurrentPage="@CurrentPage"
                            TotalPages="@TotalPages"
                            TotalResults="@TotalResults" 
                            OnCurrentPageChanged="CurrentPageChanged" />
            }
            else
            {
                <UpcomingMovies HeaderText="Upcoming Movies" />
                <OnTheAirTV HeaderText="On The Air TV Shows" />
                <PopularPeople HeaderText="Popular People" />
            }
        </div>
    </div>
</div>