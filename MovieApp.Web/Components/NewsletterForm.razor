<div id="newsletter-form">
    <div class="card">
        <div class="card-body">
            <h3 class="mb-3">Subscribe to our newsletter</h3>
            <EditForm Model="@NewsletterSubscribeModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label class="text-muted">Email</label>
                    <InputText class="form-control" @bind-Value="@NewsletterSubscribeModel.Email" />
                    <ValidationMessage For="@(() => NewsletterSubscribeModel.Email)" />
                </div>
                <button class="btn mt-3">
                    @if (DisplayLoadingSpinner)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                    }
                    Subscribe
                </button>
            </EditForm>
        </div>
    </div>
</div>