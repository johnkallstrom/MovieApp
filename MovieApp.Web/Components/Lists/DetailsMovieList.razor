@page "/lists/{userId}/{movieListId}"

<div id="list-details">
    <h3 class="mb-3">@MovieList.Name</h3>
    <p class="my-3">@MovieList.Description</p>
    <a class="btn btn-orange" href="@($"/lists/edit/{User.Id}/{MovieList.Id}")">Edit</a>
    <button class="btn btn-dark" @onclick="HandleDeleteBtnClick">Delete</button>
    <div class="row mt-3">
        <div class="col-md-12">
            @if (Movies.Count() is not 0)
            {
                <div class="row flex-row">
                    @foreach (var movie in Movies)
                    {
                        <div class="col-sm-2 mb-3">
                            <a href="@($"/movie/{movie.Id}")">
                                <div class="card card-block h-100">
                                    <img class="card-img-top img-fluid" src="@movie.Poster_Path" />
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>There is no movies in this list.</p>
            }
        </div>
    </div>
</div>