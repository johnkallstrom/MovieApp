@page "/tv-shows/popular" 

<div id="tv-popular">
    <h1>Popular TV Shows</h1>
    <hr />
    <div class="row">
        @foreach (var tvShow in Results)
        {
            <DisplayTV TVShow="tvShow" />
        }
    </div>
    <Pagination Page="@Page" TotalPages="@TotalPages" OnPageChanged="HandlePageChanged" />
</div>