@page "/tv-shows"

<div id="tv">
    <h1>TV Shows</h1>
    <hr />
    <div class="media-wrapper">
        <h3 class="mb-3"><a href="@($"/tv-shows/popular")">Popular TV Shows</a></h3>
        <div class="row flex-row flex-nowrap overflow-auto">
            @foreach (var tvShow in PopularTVShows)
            {
                <DisplayTV TVShow="tvShow" />
            }
        </div>
    </div>
    <div class="media-wrapper">
        <h3 class="mb-3"><a href="@($"/tv-shows/top-rated")">Top Rated TV Shows</a></h3>
        <div class="row flex-row flex-nowrap overflow-auto">
            @foreach (var tvShow in TopRatedTVShows)
            {
                <DisplayTV TVShow="tvShow" />
            }
        </div>
    </div>
    <div class="media-wrapper">
        <h3 class="mb-3"><a href="@($"/tv-shows/on-the-air")">On The Air TV Shows</a></h3>
        <div class="row flex-row flex-nowrap overflow-auto">
            @foreach (var tvShow in OnTheAirTVShows)
            {
                <DisplayTV TVShow="tvShow" />
            }
        </div>
    </div>
</div> 