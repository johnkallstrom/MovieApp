 @page "/tv-shows/{id}/season/{number}"

<div id="season-details-table">
    <h1>@TVShowDetails.Name - @SeasonDetails.Name</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <p>@SeasonDetails.Overview</p>
        </div>
    </div>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Episode Number</th>
                <th scope="col">Name</th>
                <th scope="col">Air Date</th>
                <th scope="col">Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var episode in SeasonDetails.Episodes)
            {
                <DisplayEpisode Episode="episode" />
            }
        </tbody>
    </table>
</div>