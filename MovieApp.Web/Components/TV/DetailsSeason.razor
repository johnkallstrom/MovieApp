@page "/tv-shows/{id}/season/{number}"

<div id="season-details">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-block h-100">
                <img class="card-img-top img-fluid" src="@SeasonDetails.Poster_Path">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card card-block h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Name</h5>
                    <p class="card-text">@SeasonDetails.Name</p>
                    <h5 class="card-title mb-3">Overview</h5>
                    <p class="card-text">@SeasonDetails.Overview</p>
                    <h5 class="card-title mb-3">Air Date</h5>
                    <p class="card-text">@SeasonDetails.Air_Date</p>
                </div>
            </div>
        </div>
    </div>
    <div id="episodes">
        <h3 class="mt-3">Episodes</h3>
        <hr />
        <div class="row flex-row flex-nowrap overflow-auto">
            @foreach (var episode in SeasonDetails.Episodes)
            {
                <div class="col-sm-2 mb-3">
                    <a href="@($"/tv-shows/{Id}/season/{Number}/episode/{episode.Episode_Number}")">
                        <div class="card card-block h-100">
                            <img class="card-img-top img-fluid" src="@episode.Still_Path" />
                            <div class="card-body">
                                <small class="text-muted text-center">@episode.Episode_Number</small>
                                <p class="card-text text-center"><strong>@episode.Name</strong></p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>