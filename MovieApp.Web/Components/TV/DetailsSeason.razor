 @page "/tv-shows/{id}/season/{number}"

<div id="season-details">
    <h1>@SeasonDetails.Name</h1>
    <hr />
    <div class="row">
        <div class="col-12">
            <ul class="list-group">
                @foreach (var episode in SeasonDetails.Episodes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <small class="text-muted"><strong>#@episode.Episode_Number</strong></small>
                        @episode.Name
                        <div class="image-parent">
                            <img src="@episode.Still_Path" class="img-fluid">
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>