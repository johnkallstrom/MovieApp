@page "/user/profile/{userId}"

<div id="user-profile">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="text-center py-3">
                    <i class="fas fa-user-astronaut fa-5x"></i>
                    <h3 class="pt-3">@User.FirstName @User.LastName</h3>
                    <p class="text-muted">@User.Username</p>
                    <a href="@($"/user/edit/{User.Id}")" class="btn btn-orange">Edit</a>
                    <button class="btn btn-delete" @onclick="HandleDeleteBtnClick">Delete</button>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <p class="card-text font-weight-bold">Username <span class="text-muted float-right font-weight-normal">@User.Username</span></p>
                    <p class="card-text font-weight-bold">Email <span class="text-muted float-right font-weight-normal">@User.Email</span></p>
                    <p class="card-text font-weight-bold">First Name <span class="text-muted float-right font-weight-normal">@User.FirstName</span></p>
                    <p class="card-text font-weight-bold">Last Name <span class="text-muted float-right font-weight-normal">@User.LastName</span></p>
                    <p class="card-text font-weight-bold">Location <span class="text-muted float-right font-weight-normal">@User.Location</span></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <MovieLists User="@User" />
    </div>
</div>