<div id="media-table">
    <p>Your search on '@SearchQuery' resulted in @TotalResults hit(s)</p>
    <div class="row">
        <div class="col-md-8">
            <ul class="list-group">
                @foreach (var media in Results)
                {
                    <DisplayMedia Media="media" />
                }
            </ul>
        </div>
    </div>
    <Pagination TotalPages="TotalPages" />
</div>