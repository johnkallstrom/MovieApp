<div id="trending-media">
    <h3 class="mb-3">Trending</h3>
    <div class="row mb-3">
        <div class="col-md-2">
            <select class="form-select" @onchange="@HandleMediaTypeSelection">
                @foreach (var option in MediaTypeOptions)
                {
                    @if (option is MovieApp.Web.Enums.MediaType.TV)
                    {
                        <option value="@option">@option.ToUpper()</option>
                    }
                    else
                    {
                        <option value="@option">@option.FirstCharToUpper()</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <select class="form-select" @onchange="@HandleTimeWindowSelection">
                @foreach (var option in TimeWindowOptions)
                {
                    <option value="@option">@option</option>
                }
            </select>
        </div>
    </div>
    <div class="row flex-row flex-nowrap overflow-auto">
        @foreach (var media in Items)
        {
            <div class="col-sm-2 mb-3">
                <a href="@media.Url">
                    <div class="card card-block h-100">
                        <img class="card-img-top img-fluid" src="@ImageHelper.GetMediaImagePath(media)" />
                    </div>
                </a>
            </div>
        }
    </div>
</div> 