@using MovieApp.Web.Enums

<div id="search-filter">
    <div class="card">
        <h5 class="card-header">Filter</h5>
        <div class="p-3">
            <p class="card-text"><a @onclick="@(() => SearchState.SetFilter(SearchFilterType.All))">All</a></p>
            <p class="card-text"><a @onclick="@(() => SearchState.SetFilter(SearchFilterType.Movies))">Movies</a></p>
            <p class="card-text"><a @onclick="@(() => SearchState.SetFilter(SearchFilterType.TV))">TV Shows</a></p>
            <p class="card-text"><a @onclick="@(() => SearchState.SetFilter(SearchFilterType.People))">People</a></p>
        </div>
    </div>
</div>