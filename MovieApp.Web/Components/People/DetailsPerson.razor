@page "/person/{id}"

<div id="person-details">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-block h-100">
                <img class="card-img-top img-fluid" src="@Person.ImageUrl">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card card-block h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Name</h5>
                    <p class="card-text">@Person.Name</p>
                    <h5 class="card-title mb-3">Known for</h5>
                    <p class="card-text">@Person.Known_For_Department</p>
                    <h5 class="card-title">Biography</h5>
                    <p class="card-text">@Person.Biography</p>
                    <h5 class="card-title">Birthday</h5>
                    <p class="card-text">@Person.Birthday</p>
                    <h5 class="card-title">Born</h5>
                    <p class="card-text">@Person.Place_Of_Birth</p>
                </div>
            </div>
        </div>
    </div>
    <div id="person-movies">
        <h3 class="mt-3">Movies</h3>
        <hr />
        @if (Movies == null || !Movies.Any())
        {
            <p>Sorry, we could not find any movies.</p>
        }
        else
        {
            <div class="row flex-row flex-nowrap overflow-auto">
                @foreach (var movie in Movies)
                {
                    <div class="col-sm-2 mb-3 d-flex">
                        <a href="@($"/movie/{movie.Id}")">
                            <div class="card card-block h-100">
                                <img class="card-img-top img-fluid" src="@movie.ImageUrl" />
                                <div class="card-body">
                                    <p class="card-text text-center"><strong>@movie.Title</strong></p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
    <a href="/" class="btn btn-primary mt-3 mb-3">Back</a>
</div>