<p>Page @CurrentPage of @TotalPages</p>
<nav aria-label="...">
    <ul class="pagination">
        @if (CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" @onclick="HandlePrevBtn">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
        }

        @if (CurrentPage < TotalPages)
        {
            <li class="page-item">
                <a class="page-link" @onclick="HandleNextBtn">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Next</a>
            </li>
        }
    </ul>
</nav>